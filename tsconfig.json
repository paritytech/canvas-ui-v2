{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "api": ["./src/api"],
      "api/*": ["./src/api/*"],
      "db": ["./src/db"],
      "db/*": ["./src/db/*"],
      "test-utils": ["./test-utils"],
      "test-utils/*": ["./test-utils/*"],
      "types": ["./src/types"],
      "types/*": ["./src/types/*"],
      "ui": ["./src/ui"],
      "ui/*": ["./src/ui/*"]
    }
  }
}
